{
  "title": "Launch apps by modifier + letters",
  "rules": [
    {
      "description": "Launch apps by right alt + letters",
      "manipulators": [
        {
          "from": {
            "key_code": "t",
            "modifiers": { "mandatory": ["right_alt"] }
          },
          "to": [{ "shell_command": "open '/Applications/iTerm.app'" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "v",
            "modifiers": { "mandatory": ["right_alt"] }
          },
          "to": [
            { "shell_command": "open '/Applications/Visual Studio Code.app'" }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "c",
            "modifiers": { "mandatory": ["right_alt"] }
          },
          "to": [{ "shell_command": "open '/Applications/Google Chrome.app'" }],
          "type": "basic"
        }
      ]
    },
