{
  "editor.fontFamily": "MesloLGSDZ Nerd Font Mono",
  "terminal.integrated.fontFamily": "MesloLGSDZ Nerd Font Mono",
  "workbench.fontAliasing": "auto",
  "editor.trimAutoWhitespace": true,
  "editor.formatOnSaveMode": "file",
  "editor.tabCompletion": "on",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  "git.autofetch": true,
  "vim.showmodename": false,
  "vim.useSystemClipboard": true,
  "vim.easymotion": true,
  "vim.hlsearch": false,
  "vim.incsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.useCtrlKeys": false,
  "vim.handleKeys": {
    "<C-[>": true,
    "<C-a>": true,
    "<C-d>": true,
    "<C-e>": true,
    "<C-i>": true,
    "<C-l>": true,
    "<C-m>": true,
    "<C-o>": true,
    "<C-r>": true,
    "<C-t>": true,
    "<C-u>": true,
    "<C-v>": true,
    "<C-w>": true,
    "<C-x>": true,
    "<C-y>": true
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["g", "w"],
      "after": ["<leader>", "<leader>", "<leader>", "b", "d", "w"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showDefinitionPreviewHover"]
    }
  ],
  "python.languageServer": "Default",
  "diffEditor.renderSideBySide": true,
  "[javascript]": {
    "editor.defaultFormatter": "ms-vsliveshare.vsliveshare"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "C_Cpp.intelliSenseEngine": "Disabled",
  "clangd.path": "/Users/pcho/Library/Application Support/Code/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/13.0.0/clangd_13.0.0/bin/clangd",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "code-runner.executorMap": {
    "javascript": "node",
    "cpp": "cd $dir && clang++ $fileName -o $fileNameWithoutExt -std=c++20 && $dir$fileNameWithoutExt"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "go.toolsManagement.autoUpdate": true,
}
