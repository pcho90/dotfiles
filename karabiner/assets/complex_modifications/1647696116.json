{
  "title": "HHKB style arrow keys",
  "rules": [
    {
      "description": "Right shift + HHKB style arrow keys",
      "manipulators": [
        {
          "from": {
            "key_code": "semicolon",
            "modifiers": { "mandatory": ["right_shift"], "optional": ["any"] }
          },
          "to": [{ "key_code": "left_arrow" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "slash",
            "modifiers": { "mandatory": ["right_shift"], "optional": ["any"] }
          },
          "to": [{ "key_code": "down_arrow" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "open_bracket",
            "modifiers": { "mandatory": ["right_shift"], "optional": ["any"] }
          },
          "to": [{ "key_code": "up_arrow" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "quote",
            "modifiers": { "mandatory": ["right_shift"], "optional": ["any"] }
          },
          "to": [{ "key_code": "right_arrow" }],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Right option + HHKB style arrow keys",
      "manipulators": [
        {
          "from": {
            "key_code": "semicolon",
            "modifiers": { "mandatory": ["right_option"], "optional": ["any"] }
          },
          "to": [{ "key_code": "left_arrow" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "slash",
            "modifiers": { "mandatory": ["right_option"], "optional": ["any"] }
          },
          "to": [{ "key_code": "down_arrow" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "open_bracket",
            "modifiers": { "mandatory": ["right_option"], "optional": ["any"] }
          },
          "to": [{ "key_code": "up_arrow" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "quote",
            "modifiers": { "mandatory": ["right_option"], "optional": ["any"] }
          },
          "to": [{ "key_code": "right_arrow" }],
          "type": "basic"
        }
      ]
    }
  ]
}
