{
  "title": "Map right option + q/w/e to mac media controls",
  "rules": [
    {
      "description": "Map right option + q/w/e to mac media controls",
      "manipulators": [
        {
          "from": {
            "key_code": "q",
            "modifiers": { "mandatory": ["right_option"] }
          },
          "to": [{ "repeat": true, "key_code": "f14" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "w",
            "modifiers": { "mandatory": ["right_option"] }
          },
          "to": [{ "repeat": true, "key_code": "f15" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "e",
            "modifiers": { "mandatory": ["right_option"] }
          },
          "to": [{ "repeat": true, "key_code": "f16" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "a",
            "modifiers": { "mandatory": ["right_option"] }
          },
          "to": [{ "repeat": true, "consumer_key_code": "volume_decrement" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "s",
            "modifiers": { "mandatory": ["right_option"] }
          },
          "to": [{ "repeat": true, "consumer_key_code": "volume_increment" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "d",
            "modifiers": { "mandatory": ["right_option"] }
          },
          "to": [{ "repeat": true, "consumer_key_code": "mute" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "z",
            "modifiers": { "mandatory": ["right_option"] }
          },
          "to": [{ "repeat": true, "consumer_key_code": "rewind" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "x",
            "modifiers": { "mandatory": ["right_option"] }
          },
          "to": [{ "repeat": true, "consumer_key_code": "play_or_pause" }],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "c",
            "modifiers": { "mandatory": ["right_option"] }
          },
          "to": [{ "repeat": true, "consumer_key_code": "fast_forward" }],
          "type": "basic"
        }
      ]
    }
  ]
}
