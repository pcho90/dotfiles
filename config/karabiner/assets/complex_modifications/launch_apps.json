{
  "title": "Launch apps with hyper",
  "rules": [
    {
      "description": "Launch iTerm with hyper+s",
      "manipulators": [
        {
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": [
                "left_control",
                "left_option",
                "left_command"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/iTerm.app'"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Launch VSCode with hyper+v",
      "manipulators": [
        {
          "from": {
            "key_code": "v",
            "modifiers": {
